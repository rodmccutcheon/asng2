<div id="form">
  <%= simple_nested_form_for [:admin, @season], :html => { :class => 'form-vertical' } do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @season %>
    <%= f.input :name, :label => 'Season Name' %>
    <p>Rounds: </p>
      <div class="accordian">
        <%= f.simple_fields_for :rounds %>
      </div>
      <p><%= f.link_to_add "Add Round", :rounds, :class => 'btn' %></p>
    <%= f.submit "Save", :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', admin_seasons_path, :class => 'btn' %>
  <% end %>
</div>
